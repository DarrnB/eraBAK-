@무기_착용_902(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 5
LOCAL:2 = 25



IF 탈착 == 1
	ABL:대상:무투 += LOCAL:1
	ABL:대상:방위 += LOCAL:2
	TALENT:대상:웨폰 = 902
	CALL SKILL_LEARN(대상, 스킬_장르_BASE, 1902, 0)
	무기사용가능:902 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:방위 -= LOCAL:2
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_BASE, "신념과 긍지")
	무기사용가능:902 = 1
ENDIF

RETURN 탈착
