@무기_이름_1101
RESULTS = Ideal
;------------------------------------------
;착용 효과 (대상, 착용 1,미착용 -1)
;------------------------------------------
@무기_착용_1101(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 25
LOCAL:2 = 10


IF 탈착 == 1
	ABL:대상:무투 += LOCAL:1
	ABL:대상:요리 += LOCAL:2
	TALENT:대상:웨폰 = 1101
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 2101, 0)
	무기사용가능:1101 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:요리 -= LOCAL:2
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "꿰뚫는 엘레강스")
	무기사용가능:1101 = 1
ENDIF

RETURN 탈착
