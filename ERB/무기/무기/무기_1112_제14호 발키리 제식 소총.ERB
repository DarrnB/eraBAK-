@무기_착용_1112(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 5
LOCAL:2 = 15
LOCAL:3 = -10


IF 탈착 == 1
	ABL:대상:방위 += LOCAL:1
	ABL:대상:지략 += LOCAL:2
	ABL:대상:야심 += LOCAL:3
	TALENT:대상:웨폰 = 1112
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 2112, 0)
	무기사용가능:1112 = 0
ELSEIF 탈착 == -1
	ABL:대상:방위 -= LOCAL:1
	ABL:대상:지략 -= LOCAL:2
	ABL:대상:야심 -= LOCAL:3
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "일단은 달콤한 휴식부터")
	무기사용가능:1112 = 1
ENDIF

RETURN 탈착
