@무기_착용_404(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 10
LOCAL:2 = 20
LOCAL:3 = -5


IF 탈착 == 1
	ABL:대상:무투 += LOCAL:1
	ABL:대상:방위 += LOCAL:2
	ABL:대상:야심 += LOCAL:3
	TALENT:대상:웨폰 = 404
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 1404, 0)
	무기사용가능:404 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:방위 -= LOCAL:2
	ABL:대상:야심 -= LOCAL:3
	;이부분은 없어도 됨 혹시몰라 넣어놓음
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "공안국장의 수완")
	무기사용가능:404 = 1
ENDIF

RETURN 탈착
