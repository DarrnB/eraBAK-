#DIM 대상
#DIM 탈착
LOCAL:1	= 5
LOCAL:2 = 20



IF 탈착 == 1
	ABL:대상:무투 += LOCAL:1
	ABL:대상:방위 += LOCAL:2
	TALENT:대상:웨폰 = 906
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 1906, 0)
	무기사용가능:906 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:방위 -= LOCAL:2
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "스퍼트 앤 슛")
	무기사용가능:906 = 1
ENDIF

RETURN 탈착
