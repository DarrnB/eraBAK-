#DIM 대상
#DIM 탈착
LOCAL:1	= 10
LOCAL:2 = 20



IF 탈착 == 1
	ABL:대상:무투 += LOCAL:1
	ABL:대상:지략 += LOCAL:2
	TALENT:대상:웨폰 = 1109
	CALL SKILL_LEARN(대상, 스킬_장르_BASE, 2109, 0)
	무기사용가능:1109 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:지략 -= LOCAL:2
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_BASE, "아머피어싱샷")
	무기사용가능:1109 = 1
ENDIF

RETURN 탈착
