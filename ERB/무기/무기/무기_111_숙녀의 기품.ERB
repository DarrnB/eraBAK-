@무기_착용_111(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 10
LOCAL:2 = 10



IF 탈착 == 1
	ABL:대상:방위 += LOCAL:1
	ABL:대상:지략 += LOCAL:2
	TALENT:대상:웨폰 = 111
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 1111, 0)
	무기사용가능:111 = 0
ELSEIF 탈착 == -1
	ABL:대상:방위 -= LOCAL:1
	ABL:대상:지략 -= LOCAL:2
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "참 잘했어요")
	무기사용가능:111 = 1
ENDIF

RETURN 탈착
