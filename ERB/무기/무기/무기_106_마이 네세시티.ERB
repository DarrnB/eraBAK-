	ABL:대상:무투 += LOCAL:1
	ABL:대상:방위 += LOCAL:2
	TALENT:대상:웨폰 = 106
	CALL SKILL_LEARN(대상, 스킬_장르_BASE, 1106, 0)
	무기사용가능:106 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:방위 -= LOCAL:2
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_BASE, "도와줘요, 페로로 님!")
	무기사용가능:106 = 1
ENDIF

RETURN 탈착
