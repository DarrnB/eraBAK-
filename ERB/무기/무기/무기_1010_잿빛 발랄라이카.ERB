@무기_착용_1010(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 10
LOCAL:2 = 15


IF 탈착 == 1
	ABL:대상:무투 += LOCAL:1
	ABL:대상:방위 += LOCAL:2
	TALENT:대상:웨폰 = 1010
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 2010, 0)
	무기사용가능:1010 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:방위 -= LOCAL:2
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "혁명적 돌격")
	무기사용가능:1010 = 1
ENDIF

RETURN 탈착
