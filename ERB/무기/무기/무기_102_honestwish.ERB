	ABL:대상:지략 += LOCAL:1
	ABL:대상:정치 += LOCAL:2
	TALENT:대상:웨폰 = 102
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 1102, 0)
	무기사용가능:102 = 0
ELSEIF 탈착 == -1
	ABL:대상:지략 -= LOCAL:1
	ABL:대상:정치 -= LOCAL:2
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "금지된 장난을 시작해볼까요?")
	무기사용가능:102 = 1
ENDIF

RETURN 탈착
