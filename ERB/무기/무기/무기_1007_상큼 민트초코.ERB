@무기_착용_1007(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 5
LOCAL:2 = 20
LOCAL:3 = 15


IF 탈착 == 1
	ABL:대상:무투 += LOCAL:1
	ABL:대상:방위 += LOCAL:2
	ABL:대상:요리 += LOCAL:3
	TALENT:대상:웨폰 = 1007
	CALL SKILL_LEARN(대상, 스킬_장르_BASE, 2007, 0)
	무기사용가능:1007 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:방위 -= LOCAL:2
	ABL:대상:요리 -= LOCAL:3
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_BASE, "아깝지만, 에잇!")
	무기사용가능:1007 = 1
ENDIF

RETURN 탈착
