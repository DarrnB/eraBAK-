@무기_착용_1009(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 15
LOCAL:2 = 10


IF 탈착 == 1
	ABL:대상:무투 += LOCAL:1
	ABL:대상:방위 += LOCAL:2
	TALENT:대상:웨폰 = 1009
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 2009, 0)
	무기사용가능:1009 = 0
ELSEIF 탈착 == -1
	ABL:대상:무투 -= LOCAL:1
	ABL:대상:방위 -= LOCAL:2
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "이즈나 인법첩!")
	무기사용가능:1009 = 1
ENDIF

RETURN 탈착
