@무기_착용_403(대상, 탈착 = 1)
#DIM 대상
#DIM 탈착
LOCAL:1	= 10
LOCAL:2 = 20
LOCAL:3 = -10


IF 탈착 == 1
	ABL:대상:방위 += LOCAL:1
	ABL:대상:지략 += LOCAL:2
	ABL:대상:야심 += LOCAL:3
	TALENT:대상:웨폰 = 403
	CALL SKILL_LEARN(대상, 스킬_장르_SP, 1403, 0)
	무기사용가능:403 = 0
ELSEIF 탈착 == -1
	ABL:대상:방위 -= LOCAL:1
	ABL:대상:지략 -= LOCAL:2
	ABL:대상:야심 -= LOCAL:3
	;이부분은 없어도 됨 혹시몰라 넣어놓음
	TALENT:대상:웨폰 = 100
	CALL SKILL_FORGET_BY_NAME(대상, 스킬_장르_SP, "갑니다, 토라마루")
	무기사용가능:403 = 1
ENDIF

RETURN 탈착
