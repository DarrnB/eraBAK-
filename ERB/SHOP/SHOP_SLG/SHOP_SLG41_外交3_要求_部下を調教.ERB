@DIPLOMACY_REQUEST_TRAIN_BUKA(ARG:0)
#DIM FIRST_LINE
LOCAL:4 = GET_COUNTRY_BOSS(CFLAG:MASTER:소속)
LOCAL:5 = GET_COUNTRY_BOSS(ARG:0)

IF COUNTRY_EVENT_ID:(ARG:0) == SP_COUNTRY_ID:(특수세력_카이저_코퍼레이션)
	PRINTFORMW 카이저는 퇴짜를 놓았습니다
	RETURN 0
ENDIF

PRINTFORMW %조사처리(ANAME(MASTER),"는")% %ANAME(LOCAL:5)%에게 조교받을 간부를 보내라고 요구했다

CALL DIPLOMACY_REQUEST_COMMON(ARG:0, 250 + 20 * CFLAG:(LOCAL:5):외교조교카운터, 1)
LOCAL:2 = RESULT
SIF LOCAL:2 <= 0
	RETURN 0

DONE_DIPLOMACY_REQUEST:(ARG:0) = 1
FIRST_LINE = LINECOUNT

$SHOW_LOOP

CALL SINGLE_DRAWLINE
PRINTL 조교할 캐릭터를 선택해 주세요
CALL SINGLE_DRAWLINE

CALL SELECT_CHARA_LIST_ONLY_LOGIC_SLG("TRAIN_BUKA", "NONE")

SIF RESULT == -1
	RETURN 1
LOCAL:30 = RESULT
CALL SINGLE_DRAWLINE
CALL SHOW_INFO(LOCAL:30)
CALL SINGLE_DRAWLINE
PRINTL 이 캐릭터를 조교합니까?
CALL ASK_YN()
IF RESULT == 1
	CLEARLINE LINECOUNT - FIRST_LINE
	GOTO SHOW_LOOP
ENDIF

SETCOLOR 칼라_주의
PRINTFORML %조사처리(ANAME(LOCAL:30),"가")% 「포로의조교」 메뉴에서 조교할 수 있게 되었습니다
RESETCOLOR
PRINTFORMW (조건을 만족하고 있는 동안에는 언제든 조교할 수 있습니다)
CFLAG:(LOCAL:30):외교조교중 = 1
REDRAW 1
;쾌락으로 말하는 것을 들려주었을 경우, 포상의 처리
SIF LOCAL:2 == 2
	CALL DIPLOMACY_REQUEST_PRIZE(ARG:0)
;약물로 말하는 것을 들려주었을 경우, 드라그(약품, 마약)의 처리
SIF LOCAL:2 == 3
	CALL DIPLOMACY_REQUEST_DRUG(ARG:0)
;최면으로 말하는 것을 들려주었을 경우, 최면의 처리
SIF LOCAL:2 == 4
	CALL DIPLOMACY_REQUEST_HYPNOSIS(ARG:0)

RETURN 1


@SELECT_CHARA_LIST_SHOW_LOGIC_TRAIN_BUKA(대상)
#DIM 대상
RETURN CFLAG:대상:소속 == DIPLOMACY_DIPLOMAT && CFLAG:대상:포로처 == 0 && 대상 != GET_COUNTRY_BOSS(CFLAG:대상:소속)　&& !IS_SP_CHARA(대상)
