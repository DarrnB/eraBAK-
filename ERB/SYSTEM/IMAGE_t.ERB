@WEAPON_IMAGE(ARG, iSize, iSpace = 0)
#DIMS sWeapon
#DIM iSize
#DIM iPadding
#DIM iSpace
#DIM iVar

sWeapon = 웨폰_{ARG}
iPadding = iSize - 3

FOR iVar, 0, iPadding
	HTML_PRINT "<br>"
NEXT
CALL PRINT_HTML_IMAGE(sWeapon, iSize, iPadding, iSpace)

RETURN
